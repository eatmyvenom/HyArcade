{
    "name": "hyarcade",
    "version": "2.5.1",
    "private": true,
    "description": "A full system for gathering and displaying peoples hypixel arcade games stats",
    "main": "index.js",
    "packageManager": "yarn@3.2.0",
    "author": "EatMyVenom",
    "license": "MPL-2.0",
    "homepage": "https://github.com/eatmyvenom/hyarcade#readme",
    "bugs": {
        "url": "https://github.com/eatmyvenom/hyarcade/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eatmyvenom/hyarcade.git"
    },
    "readme": "README.md",
    "maintainers": [
        "EatMyVenom"
    ],
    "scripts": {
        "prebuild:redoc": "node systems/redoc/build.js",
        "build:redoc": "yarn prebuild:redoc && redoc-cli bundle systems/redoc/swagger-new.json -t systems/redoc/redoc.handlebars --options systems/redoc/redoc-settings.json -o assets/api-docs.html",
        "build:worker": "cd src/Worker;wrangler publish;cd ../..",
        "changelog": "git cliff --output ./CHANGELOG.md -c ./cliff.toml",
        "bot:test": "node index.js bot test",
        "postinstall": "is-ci || husky install",
        "commit": "cz",
        "tag:patch": "npm version patch -m 'build: :bookmark: %s' && yarn posttag",
        "tag:minor": "npm version minor -m 'build: :bookmark: %s' && yarn posttag",
        "tag:major": "npm version major -m 'build: :bookmark: %s' && yarn posttag",
        "posttag": "yarn changelog && git add CHANGELOG.md && git commit --amend --no-edit",
        "lint": "eslint './{src,packages,systems}/**/*.{js,mjs}' --fix",
        "bot": "yarn workspace bot start",
        "api": "node --max-old-space-size=6000 server.js",
        "site": "yarn workspace site start",
        "worker": "node index.js workers"
    },
    "dependencies": {
        "@commitlint/config-angular": "^16.2.1",
        "fs-extra": "^10.0.1",
        "hyarcade-config": "*",
        "hyarcade-errors": "*",
        "hyarcade-logger": "*",
        "hyarcade-requests": "*",
        "hyarcade-structures": "*",
        "hyarcade-utils": "*"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "^16.2.1",
        "@types/node": "^17.0.21",
        "commitizen": "^4.2.4",
        "commitlint": "^16.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-jsdoc": "^37.9.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unicorn": "^41.0.0",
        "husky": "^7.0.4",
        "is-ci": "^3.0.1",
        "json-ts": "^1.6.4",
        "prettier": "^2.5.1"
    },
    "engines": {
        "node": ">=16.13.2",
        "yarn": ">=3.2.0",
        "npm": "Please use yarn instead of NPM to install dependencies"
    },
    "workspaces": [
        "packages/*",
        "systems/*"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
