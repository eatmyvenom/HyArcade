{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "ES2018",
    "strict": false
  },
  "exclude": ["node_modules"]
}
